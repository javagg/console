<h2><%= polyglot.t('application.files') %></h2>
<div class="row-fluid file-view-controls">
    <div class="col-md-12">
        <div class="parent-directory pull-left">

        </div>
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-primary instance-dropdown-toggle dropdown-toggle" data-toggle="dropdown">
                <%- polyglot.t('application.instances') %> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu instances" role="menu">

            </ul>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<div class="row-fluid">
    <div class="col-md-12">
        <div>
            <div class="activity"></div>
            <ul class="files">

            </ul>
            <div class="file-viewer-wrapper" style="display: none;">
                <button class="btn btn-primary btn-close-file"><i class="glyphicon glyphicon-remove"></i> <%- polyglot.t('close') %></button>
                <div id="file-viewer">

                </div>
            </div>
        </div>
    </div>
</div>