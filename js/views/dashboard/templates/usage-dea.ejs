<script type="text/x-template" id="usage-dea-template">
	<h2><%= polyglot.t('usage.dea_usage') %></h2>
	<table class="table" id="dea-usage-table">
		<thead>
			<tr>
				<th rowspan="2"><%- polyglot.t('usage.dea_ip') %></th>
				<th><%- polyglot.t('usage.table.physical_memory') %></th>
				<th><%- polyglot.t('usage.table.available_memory') %></th>
				<th><%- polyglot.t('usage.table.allocated_to_apps') %></th>
				<th><%- polyglot.t('usage.table.used_by_apps') %></th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
</script>

<script type="text/x-template" id="usage-dea-table-row-template">
	<tr>
		<td rowspan="2"><strong><%- dea.dea_ip %><strong></td>
		<td><%- dea.total_physical %> MB</td>
		<td><%- dea.total_available %> MB</td>
		<td><%- dea.total_allocated %> MB</td>
		<td><%- dea.total_used %> MB</td>
	</tr>
	<tr>
		<td colspan="4">
			<div class="progress no-margin">
			  <div class="progress-bar progress-bar-success" style="width: <%- dea.total_used / dea.total_physical * 100 %>%">
			    <span class="sr-only"><%- dea.total_used / dea.total_available * 100 %>% <%- dea.total_used %> </span>
			  </div>
			  <div class="progress-bar progress-bar-info" style="width: <%- ( dea.total_allocated - dea.total_used ) / dea.total_physical * 100 %>%">
			    <span class="sr-only"><%- ( dea.total_allocated - dea.total_used ) / dea.total_physical * 100 %>% <%- dea.total_allocated %></span>
			  </div>
			</div>
			<small class="pull-right">
				<%- (dea.total_used / dea.total_physical * 100).toFixed(2) %>% <%- polyglot.t('usage.table.used_by_apps') %>
				&amp;
				<%- (( dea.total_allocated - dea.total_used ) / dea.total_physical * 100).toFixed(2) %>% <%- polyglot.t('usage.table.allocated_to_apps') %>
				<%- polyglot.t('of') %>
				<%- dea.total_physical %> MB <%- polyglot.t('usage.table.physical_memory') %>
			</small>
		</td>
	</tr>
</script>