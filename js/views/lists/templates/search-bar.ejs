<script type="text/x-template" id="search-bar">
    <div class="row">
        <div class="col-sm-12 filter-container pull-right">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="input-group">
                <input type="text" class="form-control search-input"><i class="clear-search glyphicon glyphicon-remove"
                                                                        style="display: none;"></i>
                <span class="input-group-btn">
                    <button class="btn btn-default btn-search" type="button"><i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
</script>

<script type="text/x-template" id="order-by">
        <div class="dropdown order-by btn">
            <button data-toggle="dropdown" class="btn btn-sm btn-default">
                   <span><%- polyglot.t(order_by_fields[0][1]) %></span> <b class="caret"></b>
            </button>
            <ul class="dropdown-menu" role="menu">
                <% _.each(order_by_fields, function(field) { %>
                    <% var label = polyglot.t(field[1]); %>
                    <li><a data-value="<%- field[0] %>" role="menuitem"><%-label%></a></li>
                <% }); %>
                <li><a data-value="unset" role="menuitem"><%-polyglot.t('layout.search.sort.disabled')%></a></li>
            </ul>
        </div>
</script>

<script type="text/x-template" id="sort-order">
    <div class="btn-group pull-right sort-order-btn-group">
        <button type="button" class="btn btn-sm btn-default disabled section-header">
            <strong><%- polyglot.t('layout.search.sort.order') %></strong></button>
        <div class="dropdown sort-order btn">
            <button data-toggle="dropdown" class="btn btn-sm btn-default">
                <span><%- polyglot.t('layout.search.sort.ascending') %></span> <b class="caret"></b>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li><a data-value="asc" role="menuitem"><%- polyglot.t('layout.search.sort.ascending') %> <span
                        class='glyphicon glyphicon-chevron-up'></span></a></li>
                <li><a data-value="desc" role="menuitem"><%- polyglot.t('layout.search.sort.descending') %> <span
                        class='glyphicon glyphicon-chevron-down'></span></a></li>
            </ul>
        </div>
    </div>
</script>

<script type="text/x-template" id="filter-by-container">
    <div class="btn-group pull-right">
        <button type="button" class="btn btn-sm btn-default search-filter-clear"
                title="<%= polyglot.t('layout.search.filter.reset.description') %>">
            <i class="icon-trash icon-white"></i>
            <%= polyglot.t('layout.search.filter.reset') %>
        </button>
    </div>
    <div class="btn-group pull-right search-filter-group">
        <button type="button" class="btn btn-sm btn-default disabled section-header">
            <strong><%- polyglot.t('layout.search.filter.label') %></strong></button>
    </div>
</script>

<script type="text/x-template" id="filter-by-item">
    <div class="dropdown filter-by btn">
        <button data-toggle="dropdown" class="btn btn-sm btn-default">
            <span><%-polyglot.t(label)%></span> <b class="caret"></b>
        </button>
        <ul class="dropdown-menu" role="menu" data-key="<%-key%>" data-value="unset">
            <% _.each(values, function(value) { %>


            <li><a data-value="<%-value[0]%>">
                    <%-polyglot.t(value[1], value[3])%> <%=value[2]%>
                </a></li>


                                    <% }); %>


            <li><a class="unset" data-value="unset" role="menuitem" data-title="<%-polyglot.t(label)%>">
                <%-polyglot.t('layout.search.filter.disabled')%>
            </a></li>
        </ul>
    </div>
</script>

<script type=text/x-template" id="filter-by-icon">
    <span class='<%-classes%>'></span>
</script>
